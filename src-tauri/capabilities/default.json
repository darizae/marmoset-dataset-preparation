{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capabilities for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",

    "dialog:default",

    "fs:default",
    "fs:allow-write-text-file",
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        { "path": "**/*" }
      ]
    }
  ]
}
